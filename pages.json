{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "文章列表",
				"backgroundColor": "#fff"
			}
		},
		{
			"path": "pages/code/index",
			"style": {
				"navigationBarTitleText": "代码片段",
				"backgroundColor": "#fff"
			}
		},
		{
			"path": "pages/detail/index",
			"style": {
				"navigationBarTitleText": "文章详情",
				"backgroundColor": "#fff"
			}
		}
	],
	"tabBar": {
		"backgroundColor": "#fff", // 设置背景颜色
		"color": "#999999", // 设置图标颜色
		"selectedColor": "#007aff", // 设置选中的图标颜色
		"borderStyle": "white", // 设置边框颜色
		"list": [{
				"pagePath": "pages/index/index",
				"text": "文章列表",
				"iconPath": "static/poem-base.png",
				"selectedIconPath": "static/poem-base-active.png" // 选中后的图标
			},
			{
				"pagePath": "pages/code/index",
				"text": "代码片段",
				"iconPath": "static/poem-senior.png",
				"selectedIconPath": "static/poem-senior-active.png" // 选中后的图标
			}
		]
		// "custom": true
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "dnhyxc",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#fff"
	},
	"uniIdRouter": {},
	"easycom": {
		"autoscan": true, // 表示启用自动扫描组件功能
		"custom": {
			// 在页面中可以直接使用 u- 开头的组件而无需手动导入，例如直接使用 <u-button> 组件。
			"^u-(.*)": "uview-plus/components/u-$1/u-$1.vue"
		}
	}
}